{
	"name": "fold-imports",
	"publisher": "eramdam",
	"displayName": "Fold Imports",
	"description": "Automatically fold imports in JS(X)/TS(X) files!",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"repository": {
		"url": "https://github.com/eramdam/fold-imports",
		"type": "git"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fold-imports.fold",
				"title": "Fold imports of current file"
			},
			{
				"command": "fold-imports.unfold",
				"title": "Unfold imports of current file"
			}
		],
		"configuration": {
			"title": "Fold Imports",
			"properties": {
				"fold-imports.minimumBlockSize": {
					"type": "integer",
					"default": "2",
					"description": "How long the import block needs to be before auto-folding kicks in"
				},
				"fold-imports.debug": {
					"type": "boolean",
					"default": false,
					"description": "Print debug statements"
				},
				"fold-imports.auto": {
					"type": "boolean",
					"default": true,
					"description": "Whether or not to automatically fold imports"
				},
				"fold-imports.extraLanguages": {
					"type": "array",
					"scope": "application",
					"default": [],
					"description": "Extra languages ids in which to fold imports",
					"items": {
						"type": "string"
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"prettier": "^2.0.5",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {}
}
